@model Macro_Model.Models.Cadastro

@{
    ViewData["Title"] = "Detalhe";
}



<div style="display:flex;justify-content:center;height:80vh;align-items:center;">
    <div style="background-color:#fff; padding: 30px 30px;">
        <h2 style="text-align:center;padding:15px 0px">Atualizar Dados Cadastrais</h2>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayName("Nome : ")
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("Doc CPF : ")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayName("E-mail : ")
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayName("Senha : ")
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Senha)
            </dd>
        </dl>
        <div >
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Cpf">Editar</a> 
            <a class="btn btn-info" asp-action="Usuario">Voltar para Usuarios </a>
        </div>
    </div>

</div>

