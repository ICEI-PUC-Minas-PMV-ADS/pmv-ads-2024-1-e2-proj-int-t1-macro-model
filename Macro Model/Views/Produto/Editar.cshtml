@model Macro_Model.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Editar";
}



<div class="row" style="display:flex;justify-content:center;height:80vh;align-items:center">
    <div class="col-md-4" style="background-color:#fff; padding: 30px 30px;border-radius:20px">
        <h2 style="text-align:center;padding:15px 0px">Editar alimento ou produto</h2>
        <form method="post" asp-action="Editar" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (!string.IsNullOrEmpty(Model.Imagem))
            {
@*                 <div class="form-group text-center">
                    <img src="@Model.Imagem" alt="Imagem do produto" style="max-width:100%; max-height:200px;" />
                </div> *@
                <div class="form-group text-center">
                    <img src="@Url.Content(Model.Imagem)" alt="Imagem do produto" style="max-width:100%; max-height:200px;" />
                </div>
            }

            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input type="file" name="imagem" class="form-control" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Caloria" class="control-label"></label>
                <input type="number" step="any" asp-for="Caloria" class="form-control" />
                <span asp-validation-for="Caloria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nutricional" class="control-label"></label>
                <input  asp-for="Nutricional" class="form-control" />
                <span asp-validation-for="Nutricional" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Restricao" class="control-label"></label>
                <input asp-for="Restricao" class="form-control" />
                <span asp-validation-for="Restricao" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-1">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
