@model Macro_Model.Models.Cadastro

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center;padding:15px 0px">Deletar</h1>


<div style="padding-bottom:30px; background-color:#fff; padding: 30px 30px;margin:50px">
    <h2 style="text-align:center;padding:15px 0px">Tem certeza que deseja deletar o cadastro?</h2>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nome : ")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("E-mail : ")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Doc. CPF : ")
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Senha : ")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Perfil do Usuário : ")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Cpf" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-controller="Cadastro" asp-action="Usuario">Back to List</a>
    </form>
</div>
