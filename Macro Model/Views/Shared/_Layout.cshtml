<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Macro Model</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Macro_Model.styles.css" asp-append-version="true" />
</head>
<body style="padding:0%;margin:0%;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="margin-left:15px">Macro Model</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" style="height:80px;">
                    <ul class="navbar-nav mr-auto ">
                       
                        <li class="nav-item" style="width:110px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Cadastro">Cadastre-se!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Produto">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Usuario">Usuarios</a>
                        </li>
                        <li class="nav-item" style="width:200px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Lista">Produto Listados</a>
                        </li>
                       
                       @*  @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Usuario">Usuarios</a>
                            </li>
                        }
                        <li class="nav-item" style="width:200px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Lista">Produto Listados</a>
                        </li> *@

                    </ul>
                    <ul class="navbar-nav" style="display:flex;justify-content:right;width:100%;margin-right:15px">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                Olá, @User.Identity.Name <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Sair</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        }



                    </ul>
                    @* <nav class="navbar navbar-light bg-light">
                        <form class="form-inline">
                            <input class="form-control mr-sm-0" type="search" placeholder="Pesquisar" aria-label="Pesquisar">
                            <button class="btn btn-outline-success my-0 my-sm-0" type="submit">Pesquisar</button>
                        </form>
                    </nav> *@
                </div>
                
    
            </div>
        </nav>
      
    </header>
    <div class="container" style="margin:0%;padding:0%">
        <main style="background-color:#EAEDF4;width:100vw" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Macro Model - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quem somos nós!</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
