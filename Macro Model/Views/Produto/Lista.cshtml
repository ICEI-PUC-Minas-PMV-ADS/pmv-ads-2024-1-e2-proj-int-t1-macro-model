@model IEnumerable<Macro_Model.Models.Produto>

@{
    ViewData["Title"] = "Lista";
}


<div class="table-responsive-sm" style="margin:0px 20px;display:flex;flex-direction:column;justify-content:center;height:80vh;align-items:center">
    <div style="padding-bottom:30px; background-color:#fff; padding: 30px 30px;margin:50px">
        <h1 style="text-align:center;padding:15px 0px">Produtos e Alimentos</h1>
        <a asp-action="Produto" class="btn btn-success" style="margin-bottom:10px">Adicionar um novo produto</a>
        <table class="table table-bordered">
            <thead>
                <tr class="table-info">
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Nutricional)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Restricao)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayName("Gerenciar")
                    </th>
                    
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td style="text-align: center; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.Nutricional)
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @Html.DisplayFor(modelItem => item.Restricao)
                    </td>

                    <td style="display:flex;width:100%;justify-content:center;flex-direction:column" >
                        <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id">Editar</a> 
                        <a class="btn btn-primary" asp-action="Detalhe" asp-route-id="@item.Id">Detalhes</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>


