@model Macro_Model.Models.Cadastro

@{
	ViewData["Title"] = "Login";
}

@* <h2>@ViewData["Title"]</h2> *@

<div class="row" style="display:flex;justify-content:center;height:80vh;align-items:center">
	<div class="col-md-4" style="padding-bottom:30px; background-color:#fff; padding: 30px 30px;margin:50px;width:450px;height:450px">
		<h2 style="text-align:center;padding:15px 0px">Login</h2>
		<form asp-controller="Login" asp-action="Login" style="border: lightgray;padding:30px;border-radius:10%;">
				
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="Email" class="control-label" style="text-align:center">E-mail ou CPF</label>
					<input asp-for="Email" class="form-control" placeholder="Entre com seu E-mail ou CPF " style="text-align:center"/>
				</div>
				<div class="form-group">
					<label asp-for="Senha" class="control-label" ></label>
					<input asp-for="Senha" class="form-control" placeholder="Digite sua senha" style="text-align:center" />
				</div>
				</br>
				<div class="form-group">
					<input type="submit" value="Login" class="btn btn-primary" style="width:100%" />
				</div>
				<div>
					<a asp-controller="Cadastro" asp-action="Cadastro" class="loginlink" style="display:flex;justify-content:center;padding-top:15px">Ainda não é membro ? Crie sua conta! </a>
				</div>
		</form>
		<h3>@ViewBag.Message</h3>

	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}