@model Macro_Model.Models.Produto

@{
    ViewData["Title"] = "Detalhes do produto";
}



<div style="display:flex;justify-content:center;height:80vh;align-items:center;">
    <div style="background-color:#fff; padding: 30px 30px;width:700px;border-radius:20px">
        <h2 style="text-align:center;padding:15px 0px">Dados do alimento/produto </h2>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayName("Imagem : ")
            </dt>
            <dd class="col-sm-10" >
               @*  @Html.DisplayFor(model => model.Nome) *@
            </dd>

            <dt class = "col-sm-2">
                @Html.DisplayName("Nome : ")
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayName("Tabela Nutricional : ")
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nutricional)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayName("Restrição Alimentícia : ")
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Restricao)
            </dd>
        </dl>
        <div>
            <a class="btn btn-success" asp-action="Editar" asp-route-id="@Model?.Id">Editar dados</a> |
            <a class="btn btn-info" asp-action="Lista">Voltar para produtos </a>
        </div>
    </div>
</div>

