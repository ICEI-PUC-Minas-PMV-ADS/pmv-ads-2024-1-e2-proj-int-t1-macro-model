@model IEnumerable<Macro_Model.Models.Cadastro>

@{
    ViewData["Title"] = "Usuarios";
}



<div class="table-responsive-sm" style="margin:0px 20px;display:flex;flex-direction:column;justify-content:flex-start;height:fit-content;align-items:center;padding-bottom:50px">
    <div style="background-color:#fff; padding: 10px 15px;margin:20px auto;border-radius:20px">
        <h1 style="text-align:center;padding:15px 0px">Usuários</h1>

    
        <a asp-action="Cadastro" class="btn btn-success" style="margin-bottom:10px">Criar um novo usuário</a>
    
        <table class="table table-bordered">
            <thead>
                <tr class="table-info">
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                  @*   <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Senha)
                    </th> *@
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Perfil)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayName("Gerenciar")
                    </th>
                
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td style="text-align: center; vertical-align: middle;">
                            @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                            @Html.DisplayFor(modelItem => item.Email)
                    </td>
                  @*   <td style="text-align: center; vertical-align: middle;">
                            @Html.DisplayFor(modelItem => item.Senha)
                    </td> *@
                    <td style="text-align: center; vertical-align: middle;">
                            @Html.DisplayFor(modelItem => item.Cpf)
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                            @Html.DisplayFor(modelItem => item.Perfil)
                    </td>
            
                    <td style="display:flex;width:100%;justify-content:center;flex-direction:column">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Cpf">Editar</a>
                        <a class="btn btn-primary" asp-action="Detalhe" asp-route-id="@item.Cpf">Visualizar</a>
                        <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Cpf">Excluir perfil</a>
                     </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
