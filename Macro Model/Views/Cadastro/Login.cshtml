@model Macro_Model.Models.Cadastro

@{
	ViewData["Title"] = "Entre com seus dados para efetuar login.";
}

<h3 style="text-align:center;padding:30px 0px">@ViewData["Title"]</h3>

<div class="row" style="display:flex;justify-content:center">
	<div class="col-md-4" style="padding-bottom:30px">
		<form asp-action="Cadastro" style="border:1px solid lightgray;padding:30px;border-radius:10%">
				
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group" style="padding-bottom:10px">
					<label asp-for="Cpf" class="control-label"></label>
					<input asp-for="Cpf" class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="Senha" class="control-label"></label>
					<input asp-for="Senha" class="form-control" />
				</div>
				</br>
				<div class="form-group">
					<input type="submit" value="Login" class="btn btn-primary"/>
				</div>
		</form>
		<h3>@ViewBag.Message</h3>

	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}