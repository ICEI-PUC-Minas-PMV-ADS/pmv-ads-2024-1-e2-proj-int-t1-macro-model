@model IEnumerable<Macro_Model.Models.Produto>

@{
    ViewData["Title"] = "Lista";
}

<h1 style="text-align:center;padding:15px 0px">Produtos</h1>

<div class="table-responsive-sm">
    <table class="table table-bordered">
        <thead >
            <tr class="table-info">
                <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.Nutricional)
                </th>
                <th style="text-align: center; vertical-align: middle;">
                    @Html.DisplayNameFor(model => model.Restricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Nutricional)
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Restricao)
                </td>
               
                <td style="display:flex;width:100%;justify-content:center;flex-direction:column">
                     
                    <a class="btn btn-warning w-100 p-3" asp-action="Editar" asp-route-id="@item.Id">Editar</a> 
                    <a class="btn btn-primary w-100 p-3" asp-action="Detalhe" asp-route-id="@item.Id">Detalhes</a> 
                    <a class="btn btn-danger w-100 p-3" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<p>

    <a asp-action="Produto" class="btn btn-success">Adicionar um novo produto</a>
</p>