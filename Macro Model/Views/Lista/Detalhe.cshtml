@model Macro_Model.Models.Listadefavorito

@{
    ViewData["Title"] = "Detalhes da lista";
}


<div style="display:flex;justify-content:center;height:80vh;align-items:center;">
    <div style="background-color:#fff; padding: 30px 30px;width:700px;border-radius:20px">
        <h2 style="text-align:center;padding:15px 0px">Dados da lista </h2>

        <hr />
        <dl class="row" >
@*             <dt class = "col-sm-2"> *@
@*                 @Html.DisplayNameFor(model => model.Cadastro)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Cadastro.Cpf)
            </dd> *@
            <dt class = "col-sm-2" >
                @Html.DisplayName("Nome da Lista :")
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("Produtos :")
            </dt>
            <dd class="col-sm-10">
                <ul class="list-unstyled">
                    @if (Model.RelacaoProdutoListas != null)
                    {
                        @foreach (var relacao in Model.RelacaoProdutoListas)
                        {
                            @if (relacao.Produto != null)
                            {
                                <li>@relacao.Produto.Nome</li>
                            }
                        }
                    }
                    else
                    {
                        <li>Nenhum produto encontrado.</li>
                    }
                </ul>
            </dd>
        </dl>
        <div>
            <a class="btn btn-success" asp-action="Editar" asp-route-id="@Model?.Id">Editar</a> |
            <a class="btn btn-info" asp-action="ListaFavoritos">Voltar para Lista</a>
        </div>
    </div>
</div>
