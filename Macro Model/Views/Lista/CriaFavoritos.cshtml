@model Macro_Model.Models.Listadefavorito

@{
    ViewData["Title"] = "Cria Favoritos";
}


<div class="row" style="display:flex;justify-content:center;height:80vh;align-items:center;">
    <div class="col-md-4" style=" background-color:#fff; padding: 30px 30px;margin:45px;width:450px;border-radius:25px">
        
        <h2 style="text-align:center;padding:15px 0px"> Criar lista de Favoritos </h2>

        <form asp-controller="Lista" asp-action="CriaFavoritos" style="border: lightgray;padding:10px;border-radius:20px;">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <select asp-for="Cpf" class ="form-control" asp-items="ViewBag.Cpf"></select>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
